# fonts
font-family = JetBrainsMono Nerd Font Mono

# keybind
keybind = global:ctrl+grave_accent=toggle_quick_terminal

## navigation
keybind = ctrl+e>p=previous_tab
keybind = ctrl+e>n=next_tab
keybind = ctrl+e>shift+p=move_tab:-1
keybind = ctrl+e>shift+n=move_tab:+1
keybind = ctrl+e>c=new_tab

## split
keybind = ctrl+e>]=new_split:up
keybind = ctrl+e>\=new_split:right

## focus
keybind = ctrl+e>j=goto_split:bottom
keybind = ctrl+e>k=goto_split:top
keybind = ctrl+e>h=goto_split:left
keybind = ctrl+e>l=goto_split:right

## resize
keybind = ctrl+e+shift>j=resize_split:down,50
keybind = ctrl+e+shift>k=resize_split:up,50
keybind = ctrl+e+shift>h=resize_split:left,50
keybind = ctrl+e+shift>l=resize_split:right,50
keybind = ctrl+e>e=equalize_splits

quick-terminal-position = left

# theme
theme = adventure

background-opacity = 0.7
background-blur-radius = 20

macos-titlebar-style = hidden
